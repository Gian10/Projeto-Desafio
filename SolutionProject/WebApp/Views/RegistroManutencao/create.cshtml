@model BackEnd.Models.RegistroManutencao



@section css {
    <link rel="stylesheet" href="~/css/user.css" />
}

<h1>CADASTRO DE REGISTRO DE MANUTENÇÃO</h1>

<hr />

@using (Html.BeginForm("Create", "RegistroManutencao", FormMethod.Post))
{

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            @Html.Label("Data do Registro")
            @Html.TextBoxFor(x => x.DataRegistroManutencao, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = "readonly" })

        </div>
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            @Html.Label("Placa do Veículo")
            @Html.TextBoxFor(x => x.PlacaVeiculo, new { @class = "form-control" })
        </div>

    </div>

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            @Html.Label("Descrição do Serviço")
            @Html.TextAreaFor(x => x.Descricao, new { @class = "form-control", @rows = "10", @cols = "40" })
        </div>


    </div>
    <hr />
    <div class="form-row justify-content-center">
        <div class="form-group col-md-3">
            <input type="submit" value="SALVAR REGISTRO DE MANUTENÇÃO" class="btn btn-primary" />
        </div>
    </div>

 



}



