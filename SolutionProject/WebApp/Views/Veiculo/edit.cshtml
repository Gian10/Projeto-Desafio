@model BackEnd.Models.Veiculo;

@section css {
    <link rel="stylesheet" href="~/css/user.css" />
}

<h1>EDITAR VEÍCULO</h1>
<hr />


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.VeiculoId)

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Nome")</strong>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Cor")</strong>
            @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cor)
        </div>
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Modelo")</strong>
            @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Modelo)
        </div>
    </div>

    <div class="form-row justify-content-center">
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Ano de Fabricação")</strong>
            @Html.EditorFor(model => model.AnoFabricacao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.AnoFabricacao)
        </div>
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Placa")</strong>
            @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Placa)
        </div>
        <div class="form-group col-md-3" style="float: left; width: 65%; text-align: center;">
            <strong>@Html.Label("Marca")</strong>
            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Marca)
        </div>
    </div>

    <hr />
    <div class="form-row justify-content-center">
        <div class="form-group col-md-3">
            <input type="submit" value="ATUALIZAR VEÍCULO" class="btn btn-primary" />
        </div>
        <div>
            @Html.ActionLink("Voltar", "Index")
        </div>
    </div>

}
